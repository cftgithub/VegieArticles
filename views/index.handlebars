<div class="container">
  <!-- Form Modal -->
  <div class="modal fade" id="modal" data-backdrop="static" tabindex="-1" role="dialog"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="note-title"></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="userNotes" method="POST">
            <div class="form-group">
              <label for="title" class="mt-3 mb-1">Your Notes:</label>
              <div id="savedNotes"></div>
              <input placeholder="Add your notes" type="text" class="form-control" id="noteBody" name="title">
            </div>
            <div class="modal-footer">
              <button id="savenote" type="submit" class="btn btn-info submit mt-3 mb-1">Save Note</button>
            </div>
          </form>
        </div> <!-- / modal-body -->
      </div> <!-- / modal-content -->
    </div> <!-- / modal-dialog -->
  </div>

  <div class="row mb-5">
    <div class="col-md-12 article-container">
      {{#each articles}}
      <div class="card border mt-5 mb-2">
        <div class="card-header pt-3">
          <h4>{{title}}</h4>
          <img src="{{image}}">
          <p>{{summary}}</p>
        </div>
        <div class="card-body">
          <a class="btn btn-info" target="_blank" href="{{link}}">Read Full Article</a>
          <!-- Button trigger modal -->
          <button id={{_id}} type="button" class="notes btn btn-info" data-toggle="modal" data-target="#modal">
            Notes
          </button>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>

